{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "Take home sensor API exercise",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc -p .",
    "prod": "node lib/index.js",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "lint": "npx prettier --write .",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "node",
    "typescript",
    "template"
  ],
  "author": "Jonny",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "axios": "^0.19.2",
    "husky": "^4.2.5",
    "jest": "^26.3.0",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  }
}
